@page "/accounts"
@using Domain.Abstractions
@rendermode InteractiveWebAssembly
@inject IAccountRepository Repository

<h3>Accounts</h3>

<AccountTableTemplate Accounts="@accounts">
    <HeaderTemplate>
        <tr>
            <th>Number</th>
            <th>Balance</th>
            <th>Status</th>
        </tr>
    </HeaderTemplate>

    <RowTemplate Context="account">
        <tr>
            <td>@account.Number</td>
            <td>@account.Balance</td>
            <td>@account.Status</td>
        </tr>
    </RowTemplate>

</AccountTableTemplate>

<p>@message</p>

@code {

    // [Inject]
    // public IAccountRepository repository { get; set; }

    private IEnumerable<Account> accounts;


    private string message = "Loading Web Assembly...";


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            message = "Loading accounts...";

            StateHasChanged();



            accounts = Repository.GetAll();

            message = "Loaded accounts.";

            StateHasChanged();
        }
    }
}


